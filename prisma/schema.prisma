/************************************************************
 *                        Seller MODELS                      *
 ************************************************************/
model Seller {
  id        String   @id @default(cuid())
  userId    String
  status   SellerStatus
  attributes Json
  createdAt DateTime @default(now())
  updatedAt DateTime? @updatedAt
  deletedAt  DateTime? 

  // Joining Table
  user      User @relation(fields: [userId], references: [id], onDelete: Cascade)
  SellerStripeAccountMapping SellerStripeAccountMapping[]
  Shop Shop[]

  SellerSubscription SellerSubscription[]
}

enum SellerStatus {
  ACTIVE 
  PENDING
  DELETED
  SUSPENDED
}

model SellerStripeAccountMapping {
 id String   @id @default(cuid())
 sellerId String  @unique
 userId String @unique
 stripeAccountId String
 identifyId String
 createdAt DateTime @default(now())

  // Joining Table
  seller    Seller  @relation(fields: [sellerId], references: [id], onDelete:Cascade)
  user      User @relation(fields: [userId], references: [id], onDelete: Cascade)
}

model Shop {
  id          String   @id @default(cuid())
  name        String
  description String   @db.Text
  sellerId    String   @unique
  country     String
  shopUrl     String
  attributes  Json
  website     String?
  createdAt   DateTime @default(now())
  updatedAt   DateTime? @updatedAt
  deletedAt   DateTime?

  // Joining Table
  seller      Seller @relation(fields: [sellerId], references: [id], onDelete: Cascade)
  CartItem    CartItem[]

  Product Product[]
}



/************************************************************
 *                Seller Subscription MODELS                *
 ************************************************************/

model SellerSubscription {
  id    String   @id @default(cuid())
  sellerId String
  nextPaymentDate DateTime
  status SellerSubscriptionStatusType
  createdAt DateTime @default(now())
  items Json
  eventRecords SellerSubscriptionEventRecord[] // !! `EventRecord`  is not joinging table. this is part of the entity
  updatedAt DateTime @updatedAt
  cancelAt DateTime?
  
  // Joining Table
  sellerStripeSubscription SellerSubscriptionMapping[]
  seller  Seller @relation(fields: [sellerId], references: [id], onDelete: Cascade)
}

enum  SellerSubscriptionStatusType {
  ACTIVE
  CANCELLED
  CANCELLING
  PAYMENT_FAILED
}


model SellerSubscriptionEventRecord {
  id String   @id @default(cuid())
  subscriptionId String
  type SellerEventRecordType
  metadata Json
  createdAt DateTime @default(now())

  // Joining Table
  subscription  SellerSubscription  @relation(fields: [subscriptionId], references: [id], onDelete:Cascade)
}

enum SellerEventRecordType {
  CREATE
  PAYMENT
  PENDING_CANCEL
  PAYMENT_FAIL
  PAYMENT_SUCCESS
  EXPIRY
  CANCELLED
  RESTORE
  REACTIVATE
  // Unused so far
  ERROR
  OTHER
  REFUND
  MODE_CHANGE
}



model SellerSubscriptionMapping {
 id String   @id @default(cuid())
 sellerId String
 bevetuSubscriptionId String 

 identifyId String
 stripeCustomerId String
 stripeSubscriptionId String @unique
 stripeSubscriptionItem Json

 createdAt DateTime @default(now())

  // Joining Table
  sellerSubscription    SellerSubscription  @relation(fields: [bevetuSubscriptionId], references: [id], onDelete:Cascade)
}


/************************************************************
 *                       PRODUCT MODELS                     *
 ************************************************************/
model Product {
  id             String    @id @default(uuid())
  shopId         String
  name           String
  description    String
  price          Float

  tags           String[]  @default([])
  slug           String?   
  imageUrls      String[]  @default([])

  stock          Int
  reservedStock  Int       @default(0)
  isActive       Boolean
  isApproved     Boolean   @default(false)

  // JSON for complex types
  variants       Json
  discount       Json

  categories     Json

  createdAt      DateTime  @default(now())
  updatedAt      DateTime  @updatedAt

  @@index([shopId])
  
  // Joining Table
  shop      Shop    @relation(fields: [shopId], references: [id], onDelete: Cascade)

}

model ProductReview {
  id                   String                 @id @default(uuid())
  productId            String
  userId               String
  rating               Int
  title                String
  comment              String?
  isVerifiedPurchase   Boolean               @default(false)
  helpfulCount         Int                   @default(0)
  reported             Boolean               @default(false)
  createdAt            DateTime              @default(now())
  updatedAt            DateTime              @updatedAt

  // Relation to seller reply
  reply                ProductReviewReply?

  @@index([productId])
  @@index([userId])
}

model ProductReviewReply {
  id         String        @id @default(uuid())
  reviewId   String        @unique
  sellerId   String
  message    String
  createdAt  DateTime      @default(now())
  updatedAt  DateTime      @updatedAt

  // Joining Table
  review     ProductReview @relation(fields: [reviewId], references: [id],onDelete: Cascade)

  @@index([sellerId])
}

/************************************************************
 *                        ORDER MODELS                      *
 ************************************************************/
model Order {
  id             String           @id @default(cuid())
  buyerId        String
  shopId         String
  totalAmount    Float
  currency       String
  paymentStatus  OrderPaymentStatus
  paymentMethod  String
  orderStatus    OrderStatus
  createdAt      DateTime         @default(now())
  updatedAt      DateTime         @updatedAt
  items          OrderItem[]
  eventRecords   OrderEventRecord[]
  attributes     Json

  Cart Cart[]
}
enum OrderPaymentStatus {
  PENDING
  SUCCESS
  FAILED
}

enum OrderStatus {
  CREATED
  PROCESSING
  SHIPPED
  DELIVERED
  CANCELLED
}

model OrderItem {
  id             String   @id @default(cuid())
  orderId        String
  productId      String
  varientId      String
  productName    String
  quantity       Int
  price          Float

  refundedQuantity Int     @default(0)
  refundedAmount   Float   @default(0)
  refundStatus     OrderRefundStatus @default(NONE)

  createdAt      DateTime @default(now())
  updatedAt      DateTime @updatedAt

  // Joining Table
  order          Order    @relation(fields: [orderId], references: [id],onDelete: Cascade)
}


enum OrderRefundStatus {
  NONE
  PENDING
  COMPLETED
  REJECTED
}


model OrderEventRecord {
  id             String           @id @default(cuid())
  orderId        String
  createdAt      DateTime         @default(now())
  type           OrderEventRecordType
  metadata       Json?

  // Joining Table
  order          Order            @relation(fields: [orderId], references: [id],onDelete: Cascade)
}



enum OrderEventRecordType {
  CREATE
  PROCESSING
  SHIPPED
  DELIVERED
  REFUND_REQUEST
  REFUND_COMPLETED
  REFUND_REJECTED
}



/************************************************************
 *                        CART MODELS                      *
 ************************************************************/
model Cart {
  id         String     @id @default(cuid())
  userId     String
  isCheckout Boolean    @default(false)
  orderId    String?    // only populated after checkout
  createdAt  DateTime   @default(now())
  updatedAt  DateTime?  @updatedAt

  items      CartItem[]

  // Joining Table
  order          Order?   @relation(fields: [orderId], references: [id],onDelete: Cascade)
}

model CartItem {
  id        String   @id @default(cuid())
  shopId    String
  cartId    String
  productId String
  varientId String
  quantity  Int
  price     Float

  // Joining Table
  cart      Cart     @relation(fields: [cartId], references: [id], onDelete: Cascade)
  shop      Shop    @relation(fields: [shopId], references: [id], onDelete: Cascade)
}
//-----  Below are the model for seller's use ----- //
model Seller {
  id        String   @id @default(cuid())
  userId    String
  status   SellerStatus
  attributes Json
  createdAt DateTime @default(now())
  updatedAt DateTime? @updatedAt
  deletedAt  DateTime? 

  // Joining Table
  user      User @relation(fields: [userId], references: [id], onDelete: Cascade)
  SellerStripeAccountMapping SellerStripeAccountMapping[]
  Shop Shop[]

  SellerSubscription SellerSubscription[]
}

enum SellerStatus {
  ACTIVE 
  PENDING
  DELETED
  SUSPENDED
}

model SellerStripeAccountMapping {
 id String   @id @default(cuid())
 sellerId String  @unique
 userId String @unique
 stripeAccountId String
 identifyId String
 createdAt DateTime @default(now())

  // Joining Table
  seller    Seller  @relation(fields: [sellerId], references: [id], onDelete:Cascade)
  user      User @relation(fields: [userId], references: [id], onDelete: Cascade)
}

model Shop {
  id          String   @id @default(cuid())
  name        String
  description String   @db.Text
  sellerId    String   @unique
  country     String
  shopUrl     String
  attributes  Json
  website     String?
  createdAt   DateTime @default(now())
  updatedAt   DateTime? @updatedAt
  deletedAt   DateTime?

  // Joining Table
  seller      Seller @relation(fields: [sellerId], references: [id], onDelete: Cascade)
}



model SellerSubscription {
  id    String   @id @default(cuid())
  sellerId String
  nextPaymentDate DateTime
  status SellerSubscriptionStatusType
  createdAt DateTime @default(now())
  items Json
  eventRecords SellerSubscriptionEventRecord[] // !! `EventRecord`  is not joinging table. this is part of the entity
  updatedAt DateTime @updatedAt
  cancelAt DateTime?
  
  // Joining Table
  sellerStripeSubscription SellerSubscriptionMapping[]
  seller  Seller @relation(fields: [sellerId], references: [id], onDelete: Cascade)
}

enum  SellerSubscriptionStatusType {
  ACTIVE
  CANCELLED
  CANCELLING
  PAYMENT_FAILED
}


model SellerSubscriptionEventRecord {
  id String   @id @default(cuid())
  subscriptionId String
  type SellerEventRecordType
  metadata Json
  createdAt DateTime @default(now())

  // Joining Table
  subscription  SellerSubscription  @relation(fields: [subscriptionId], references: [id], onDelete:Cascade)
}

enum SellerEventRecordType {
  CREATE
  PAYMENT
  PENDING_CANCEL
  PAYMENT_FAIL
  PAYMENT_SUCCESS
  EXPIRY
  CANCELLED
  RESTORE
  REACTIVATE
  // Unused so far
  ERROR
  OTHER
  REFUND
  MODE_CHANGE
}



model SellerSubscriptionMapping {
 id String   @id @default(cuid())
 sellerId String
 bevetuSubscriptionId String 

 identifyId String
 stripeCustomerId String
 stripeSubscriptionId String @unique
 stripeSubscriptionItem Json

 createdAt DateTime @default(now())

  // Joining Table
  sellerSubscription    SellerSubscription  @relation(fields: [bevetuSubscriptionId], references: [id], onDelete:Cascade)
}

